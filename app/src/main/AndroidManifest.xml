<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firstweather.firstweather">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="FirstWeather"
        android:roundIcon="@drawable/roundlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TomorrowActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".City"
            android:screenOrientation="portrait"/>

        <activity android:name=".Location"
            android:screenOrientation="portrait"/>

        <activity android:name=".Option"
            android:screenOrientation="portrait"/>

        <activity android:name=".Week"
            android:screenOrientation="portrait"/>


    </application>

</manifest>