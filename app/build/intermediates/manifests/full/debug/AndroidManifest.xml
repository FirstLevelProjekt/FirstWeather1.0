<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firstweather.firstweather"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="FirstWeather"
        android:roundIcon="@drawable/roundlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.firstweather.firstweather.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.firstweather.firstweather.TomorrowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.firstweather.firstweather.City"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.firstweather.firstweather.Location"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.firstweather.firstweather.Option"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.firstweather.firstweather.Week"
            android:screenOrientation="portrait" />
    </application>

</manifest>